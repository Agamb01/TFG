file = {:C$\backslash$:/Users/Andy/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Esmaeeli et al. - 2011 - A multi-bit error tolerant register file for a high reliable embedded processor.pdf:pdf},
